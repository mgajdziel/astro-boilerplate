<img id="background" src={background.src} alt="" fetchpriority="high" />
<Image
	src={background}
	alt="..."
	sizes="(max-width: 600px) 100vw, 50vw"
	/>
<Picture
	src={background}
	alt="..."
	widths={[480, 960, 1440]}
	formats={['webp']}
	sizes="(max-width: 640px) 100vw, (max-width: 1024px) 75vw, 50vw"
	/>